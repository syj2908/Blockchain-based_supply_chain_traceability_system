pragma solidity ^0.8.7;
contract Transaction {
    string transactionID;
    string lenderID;
    string borrowerID;
    uint256 cashNum;
    uint256[] Transactions;
    bool flag=true;

    constructor(string memory _transactionID, string memory _lenderID, string memory _borrowerID, uint256 _cashNum) {
        transactionID = _transactionID;
        lenderID =_lenderID;
        borrowerID = _borrowerID;
        cashNum = _cashNum;
    }

    function attachTransaction(uint256 transactionID) public returns (bool) {
        Transactions.push(transactionID);
        return true;
    }

    function checkTransaction()
        public view returns (string memory,string memory,string memory,uint256,bool)
    {
        //if(余额不够) flag=false;
        if(flag)
        return (transactionID,lenderID,borrowerID,cashNum,flag);
        else return("Flase","Flase","Flase",0,false);
    }
}
